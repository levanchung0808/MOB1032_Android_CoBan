<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/bg_login"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDangNhap"
            android:fontFamily="@font/blinker_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:text="Đăng nhập"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTaiKhoan"
            android:layout_width="350dp"
            android:fontFamily="@font/blinker_regular"
            android:layout_height="55dp"
            android:inputType="textAutoComplete"
            android:layout_below="@+id/tvDangNhap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input_login"
            android:drawableLeft="@drawable/ic_user"
            android:drawableStart="@drawable/custom_username_icon"
            android:drawablePadding="20dp"
            android:hint="Tên đăng nhập"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"/>

        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:fontFamily="@font/blinker_regular"
            android:inputType="textPassword"
            android:layout_below="@+id/edtTaiKhoan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input_login"
            android:drawableLeft="@drawable/ic_password"
            android:drawableRight="@drawable/ic_password"
            android:drawableStart="@drawable/custom_password_icon"
            android:drawablePadding="20dp"
            android:hint="Mật khẩu"
            android:paddingLeft="30dp"
            android:paddingRight="10dp" />

        <CheckBox
            android:id="@+id/cbLuuMatKhau"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edtMatKhau"
            android:fontFamily="@font/blinker_regular"
            android:textColor="#FFFFFF"
            android:text="Lưu mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDangNhap"
            android:fontFamily="@font/blinker_regular"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_below="@+id/cbLuuMatKhau"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_input_login"
            android:text="Đăng nhập"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tvQuenMatKhau"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/blinker_regular"
            android:layout_marginTop="15dp"
            android:textStyle="italic|bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnDangNhap"
            android:text="Bạn quên mật khẩu?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvBanKhongCoTaiKhoan"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_fb" />

        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvBanKhongCoTaiKhoan"
            android:layout_toLeftOf="@+id/ivFacebook"
            android:src="@drawable/ic_google" />

        <ImageView
            android:id="@+id/ivIG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvBanKhongCoTaiKhoan"
            android:layout_toRightOf="@+id/ivFacebook"
            android:src="@drawable/ic_ig" />

        <TextView
            android:id="@+id/tvKetNoi"
            android:fontFamily="@font/blinker_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivFacebook"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="hoặc kết nối với" />

        <TextView
            android:id="@+id/tvBanKhongCoTaiKhoan"
            android:textColor="#000"
            android:fontFamily="@font/blinker_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/DangKy" />

    </RelativeLayout>


</LinearLayout>