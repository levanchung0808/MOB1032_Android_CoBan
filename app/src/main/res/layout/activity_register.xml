<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/bg_login"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDangNhap_DK"
            android:fontFamily="@font/blinker_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:text="Đăng ký"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTaiKhoan_DK"
            android:layout_width="350dp"
            android:fontFamily="@font/blinker_regular"
            android:layout_height="55dp"
            android:inputType="textAutoComplete"
            android:layout_below="@+id/tvDangNhap_DK"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input_login"
            android:drawableLeft="@drawable/ic_user"
            android:drawableStart="@drawable/custom_username_icon"
            android:drawablePadding="20dp"
            android:hint="Tên đăng nhập"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"/>

        <EditText
            android:id="@+id/edtMatKhau_DK"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:fontFamily="@font/blinker_regular"
            android:inputType="textPassword"
            android:layout_below="@+id/edtTaiKhoan_DK"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input_login"
            android:drawableLeft="@drawable/ic_password"
            android:drawableRight="@drawable/ic_password"
            android:drawableStart="@drawable/custom_password_icon"
            android:drawablePadding="20dp"
            android:hint="Mật khẩu"
            android:paddingLeft="30dp"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/btnDangKy_DK"
            android:fontFamily="@font/blinker_regular"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/edtMatKhau_DK"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_input_login"
            android:text="Đăng ký"
            android:textAllCaps="false" />

    </RelativeLayout>

</LinearLayout>