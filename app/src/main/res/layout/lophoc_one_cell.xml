<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_item_listview">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar_LH"
            android:src="@drawable/avartar_c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:shapeAppearanceOverlay="@style/Circula"/>

        <ImageView
            android:id="@+id/ivEditLopHoc"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/ivDeleteLopHoc"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/ivEditLopHoc"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete" />


        <TextView
            android:id="@+id/tvMaLopHoc"
            android:textColor="@color/purple_700"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/ivAvatar_LH"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/balooda2_bold"
            android:gravity="left"
            android:text="Mã lớp"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvTenLopHoc"
            android:textColor="@color/purple_500"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/tvMaLopHoc"
            android:layout_toRightOf="@+id/ivAvatar_LH"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/balooda2_bold"
            android:gravity="right"
            android:text="Tên lớp"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>