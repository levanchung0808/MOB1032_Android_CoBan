<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeQLSVActivity">

    <ImageView
        android:id="@+id/ivBGTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_homeqlsv"/>

    <TextView
        android:id="@+id/tvUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="ADMIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivHome_QLLopHoc"
        android:layout_below="@+id/ivBGTop"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/btn_qllh"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tvQLLH"
        android:text="Quản lý lớp học"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/blinker_regular"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivHome_QLLopHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivHome_QLSinhVien"
        android:layout_below="@+id/tvQLLH"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_qlsv"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:text="Quản lý sinh viên"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/blinker_regular"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivHome_QLSinhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>