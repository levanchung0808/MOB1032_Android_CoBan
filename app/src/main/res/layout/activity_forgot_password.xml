<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ForgotPasswordActivity"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvVuiLongNhapUsername"
        android:text="Vui lòng nhập username"
        android:fontFamily="@font/balooda2_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/edtUsername_ForgotPass"
        android:hint="Username"
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnForgotPass"
        android:text="Khôi phục mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>